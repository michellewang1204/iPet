<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/testblue"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/testblue"
            android:paddingBottom="75dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:background="@drawable/gradientbackground"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/view2"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:elevation="12dp"
                        android:innerRadius="0dp"
                        android:layout_marginLeft="25dp"
                        android:shape="ring"
                        app:cardCornerRadius="85dp">

                        <ImageView
                            android:id="@+id/pic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/corgi"></ImageView>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="0dp"
                        android:paddingTop="15dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:text="Wiliam Snoe"
                        android:textColor="#fff"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="220dp"
                    app:cardBackgroundColor="@color/tho"
                    app:cardElevation="0dp">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="340dp"
                        android:layout_below="@id/info"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:elevation="4dp"
                        android:background="@drawable/alarmset1">

                        <TableRow
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/feed"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#00000000"
                                android:drawableTop="@drawable/pet_food4"
                                android:paddingTop="45dp"
                                android:paddingRight="25dp"
                                android:paddingLeft="30dp"
                                android:text="餵食"
                                android:textSize="16dp"
                                android:textColor="@drawable/thecolor"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/poop"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#00000000"
                                android:drawableTop="@drawable/litter3"
                                android:paddingTop="45dp"
                                android:paddingRight="25dp"
                                android:paddingLeft="25dp"
                                android:textSize="16dp"
                                android:text="便便"
                                android:textColor="@drawable/thecolor"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/medicine"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#00000000"
                                android:drawableTop="@drawable/medicine3"
                                android:paddingTop="45dp"
                                android:paddingRight="30dp"
                                android:paddingLeft="25dp"
                                android:textSize="16dp"
                                android:text="餵藥"
                                android:textColor="@drawable/thecolor"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:layout_weight="2"
                                ></Button>
                            <Button
                                android:id="@+id/vaccine"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:background="#00000000"
                                android:drawableTop="@drawable/vaccine1"
                                android:paddingTop="45dp"
                                android:paddingRight="30dp"
                                android:paddingLeft="30dp"
                                android:textSize="16dp"
                                android:text="疫苗"
                                android:textColor="@drawable/thecolor"
                                android:textStyle="bold" />
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:layout_weight="1"
                                ></Button>
                            <Button
                                android:id="@+id/deworming"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:background="#00000000"
                                android:drawableTop="@drawable/mite2"
                                android:scaleType="fitXY"
                                android:paddingTop="45dp"
                                android:paddingRight="30dp"
                                android:textSize="16dp"
                                android:paddingLeft="30dp"                                android:text="驅蟲"
                                android:textColor="@drawable/thecolor"
                                android:textStyle="bold" />
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:layout_weight="2"
                                ></Button>
                        </TableRow>

                    </TableLayout>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nvgationview"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:labelVisibilityMode="labeled"
        app:itemTextColor="@drawable/icon"
        app:itemIconTint="@drawable/icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>